{
  "name": "pibooks-workspace",
  "version": "1.0.0",
  "description": "PiBooks - A comprehensive book management system",
  "private": true,
  "workspaces": [
    "Shared",
    "PiBooksAPI",
    "PiBooksWebUI"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace=PiBooksAPI",
    "dev:web": "npm run dev --workspace=PiBooksWebUI",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "build:api": "npm run build --workspace=PiBooksAPI",
    "build:web": "npm run build --workspace=PiBooksWebUI",
    "build": "npm run build:api && npm run build:web",
    "install:all": "npm install",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "books",
    "library",
    "management",
    "api",
    "react",
    "material-ui"
  ],
  "author": "adarsh",
  "license": "MIT",
  "dependencies": {
    "serverless-http": "^4.0.0"
  }
}
